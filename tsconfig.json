{
  "compilerOptions": {
    "outDir": "./build",
    "baseUrl": "src",
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "typeRoots": ["node_modules/@types/"],
    "paths": {
      "@/*": ["*"],
      "@configs/*": ["configs/*"],
      "@controllers/*": ["controllers/*"],
      "@dto/*": ["dto/*"],
      "@db/*": ["db/*"],
      "@helpers/*": ["helpers/*"],
      "@libs/*": ["libs/*"],
      "@middlewares/*": ["middlewares/*"],
      "@routes/*": ["routes/*"],
      "@services/*": ["services/*"]
    },
    "strict": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "declaration": false,
    "strictNullChecks": false,
    "noEmit": false,
    "noImplicitAny": false,
    "noImplicitReturns": false
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "src/tests/*",
    "build",
  ],
  "ts-node": {
    "compilerHost": true,
    "transpileOnly": true,
    "files": true,
    "pretty": true
  }
}
